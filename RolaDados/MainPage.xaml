<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RolaDados.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Cara ou Coroa"
                />
            <Image
                x:Name="CoinImage"
                Source="cara.jpg"
                WidthRequest="300"
                />
            <Label
                Text=""
                x:Name="Result"
                />

            <Picker
                  TitleColor="DarkGray"
                  WidthRequest="300"
                  x:Name="SidesPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Cara</x:String>
                        <x:String>Coroa</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>


            <Button
                x:Name="dadoBtn"
                Text="Sortear" 
                Clicked="dadoBtn_Clicked"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
